#----------------------------------------------------------#

# ls
alias "ls"="ls --color=auto"
alias "ll"="ls -l"
alias "la"="ls -la"

# grep
alias "grep"="grep --color=auto"
alias "gr"="grep -r"

# file operation
alias "cp"="cp -i"
alias "mv"="mv -i"
alias "rm"="rm -i"
alias "rmf"="rm -fr"

# history
alias "hg"="history | grep"
